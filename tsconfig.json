{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "module": "CommonJS", 
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "__tests__"
  ]
}
